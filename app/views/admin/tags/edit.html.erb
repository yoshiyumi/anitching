<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>タグ編集</h1>
      <%= form_with model:@tag,url: admin_tag_path, local: true do |f| %>
        <tr>
          <div class="form-group">
            <label for="tag_name">タグ名</label>
            <%= f.text_field :name, class:"form-control tag_name"%>
          </div>
          
          <div class="form-group">
            <%= f.submit "変更を保存",  class:"btn btn-success"%>
          </div>
        </tr>
      <% end %>
    </div>
  </div>
</div>