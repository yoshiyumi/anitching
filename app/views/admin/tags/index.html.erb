<p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto"><p id="notice"></p>
      <h1>タグ一覧・追加</h1>

        <%= form_with model: @tag,url: admin_tags_path, local:true do |f| %>

        <div>
          <div class="form-group">
            <label for="name">タグ名</label>
            <%= f.text_field :name, class:"form-control name" %>
          </div>

          <div class="form-group">
            <%= f.submit "新規登録", class:"btn btn-secondary" %>
          </div>
        </div>
        <% end %>
        <table>
        <thead>
          <tr>
            <th>タグ</th>
            <th colspan="3"></th>
          </tr>
    　   </thead>
    　   <tbody>
    　     <% @tags.each do |tag| %>
    　     <tr class="tag-box">
            <td><%= tag.name %></td>
            <td><%= link_to "編集する", edit_admin_tag_path(tag.id), class:"btn btn-sm btn-success" %></td>
          </tr>
          <% end %>
         </tbody>
       </table>
      </div>
   </div>
 </div>
