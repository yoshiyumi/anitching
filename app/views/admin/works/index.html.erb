<div class="container px-5 px-sm-0">
    <div class="row">
        <div class="col-md-3">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>タグ</th>
                    </tr>
                </thead>
                <tbody>
                    <% @tags.each do |tag| %>
                    <tr class="tag-box">
                        <% if @genre_id.present? %>
                          <td><%= link_to tag.name, admin_works_path(genre_id: @genre_id, tag_id: tag.id) %></td>
                        <% else %>
                          <td><%= link_to tag.name, admin_works_path(tag_id: tag.id) %></td>
                        <% end %>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
        
        <div class="col-md-8 offset-md-1">
            <h1>作品一覧</h1>
            <div class = "row">
                <% @works.each do |work| %>
                <div class = "work col-md-3" >
                    <%= link_to admin_work_path(work.id) do%>
                      <%= attachment_image_tag work, :image, size: '100x100', format: 'jpeg', class:"attachment image fallback" %>
                    <% end %><br>
                      <%= link_to work.name, admin_work_path(work.id)%><br>
                      <%= work.release_date %>
                </div>
                <% end %>
            </div>
           <%= paginate @works, theme: 'twitter-bootstrap-4' %>
        </div>
    </div>
</div>
