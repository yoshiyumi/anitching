<p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1><%= @customer.nicname %>さんの会員情報編集</h1>
        
          <%= form_with model: @customer,url: admin_customer_path, local:true do |f| %>

          <div class="form-group">
            <label for="id">会員ID</label>
            <%= f.text_field :id, class:"form-control id" %>
          </div>

          <div class="form-group">
            <label for="name">ニックネーム</label>
            <%= f.text_field :nicname, class:"form-control name" %>
          </div>
          <div class="form-group">
            <label for="image">写真</label>
            <%= f.text_field :image,  class:"form-control image" %>
          </div>
          
          <div class="form-group">
            <label for="gender">性別</label>
            <%= f.radio_button :gender, :man, checked: "checked" %>
            <%= f.label :男, class: "gender_label" %>
            <%= f.radio_button :gender, :woman %>
            <%= f.label :女, class: "gender_label" %>
          </div>
            
          <div class="form-group">
            <label for="prefectures">都道府県</label>
            <%= f.text_field :prefectures, class:"form-control prefectures" %>
          </div>
          <div class="form-group">
            <label for="email">メールアドレス</label>
            <%= f.text_field :email, class:"form-control email" %>
          </div>
          <div class="form-group">
            <label for="introduction">自己紹介</label>
            <%= f.text_field :introduction, class:"form-control introduction" %>
          </div>

          <div class="form-group">
            <label for="status">会員ステータス</label>
            <%= f.radio_button :is_active, :true %>
            <%= f.label :is_active, "有効", {value: :true, style: "display: inline-block;"} %>
            <%= f.radio_button :is_active, :false %>
            <%= f.label :is_active, "退会", {value: :false, style: "display: inline-block;"} %>
          </div>
          <div class="form-group">
            <%= f.submit "変更を保存", class:"btn btn-success" %>
          </div>
          <% end %>
       
      </div>
   </div>
 </div>