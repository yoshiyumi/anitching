<div class="container px-5 px-sm-0">
    <div class="row">
        <div class="col-md-3">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>ジャンル</th>
                    </tr>
                </thead>
                <tbody>
                    <% @genres.each do |genre| %>
                        <tr class="genre-box">
                            <td><%= link_to genre.name, admin_works_path(genre_id: genre.id) %></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
        
        <div class="col-md-8 offset-md-1">
            <strong>アニッチング管理者ページ</strong>
            
            <h2>作品</h2>
            <div class = "row">
                <% @works.each do |work| %>
                    <div class = "work col-md-3" >
                        <%= link_to admin_work_path(work.id) do%>
                            <%= attachment_image_tag work, :image, size: '100x100', format: 'jpeg', class:"attachment image fallback" %>
                        <% end %><br>
                        <%= link_to work.name, admin_work_path(work.id)%>
                    </div>
                <% end %>
            </div>
            <%= paginate @works, theme: 'twitter-bootstrap-4' %>
        </div>
    </div>
</div>