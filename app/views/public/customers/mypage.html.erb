<div class = "container">
    <h1>マイページ</h1>
    <div class = "row">
        <div class = "col-md-6" >
            <h5>登録情報</h5>
        </div>
        
        <div class = "col-md-6" >
            <%= link_to "編集する", edit_customer_path(current_customer.id), class:"btn btn-sm btn-success" %>
        </div>
    </div>
    <table class="table table-bordered">
        <tbody>
            <tr class="customer-box">
                <td>会員</td>
                <td><%= @customer.id %></td>
            </tr>
            
            <tr>
                <td>ニックネーム</td>
                <td>
                    <%= @customer.nicname %>
                    <%= attachment_image_tag @customer, :image, size: '100x100', format: 'jpeg', class:"attachment image fallback" %>
                </td>
            </tr>
            
            <tr>
                <td>性別</td>
                <td><%= @customer.gender_i18n %></td>
            </tr>
            
            <tr>
                <td>都道府県</td>
                <td><%= @customer.prefectures %></td>
            </tr>
            
            <tr>
                <td>メールアドレス</td>
                <td><%= @customer.email %></td>
            </tr>
            
            <tr>
                <td>自己紹介</td>
                <td><%= @customer.introduction %></td>
            </tr>
        </tbody>
    </table>
    
    <div class = "row">
        <div class = "col-md-3" >
            <%= link_to "お気に入り一覧", customers_like_path, class:"btn btn-sm btn-success" %>
        </div>
        <div class = "col-md-3" >
            <%= link_to "投稿履歴一覧", customers_history_path, class:"btn btn-sm btn-success" %>
        </div>
    </div>
 </div>
