<div class="col-md-4 offset-md-4">
  <h2>新規会員登録</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/customers/shared/error_messages", resource: resource %>
    <div class="field">
      <%= f.label :"ニックネーム" %>
      <%= f.text_field :nicname, autofocus: true, autocomplete: "ニックネーム" %>
    </div>
    
    <div class="field">
      <%= f.label :"写真" %>
      <%= f.attachment_field :image, placeholder: "画像", class:"form-control-file image" %>
    </div>
    
    <div class="field">
      <%= f.label :"性別" %>
      <%= f.radio_button :gender, :man, checked: "checked" %>
      <%= f.label :男, class: "gender_label" %>
      <%= f.radio_button :gender, :woman %>
      <%= f.label :女, class: "gender_label" %>
    </div>
    
    <div class="field">
      <%= f.label :"メールアドレス" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "メールアドレス" %>
    </div>
    
    <div class="field">
      <%= f.label :"都道府県"%>
      <%= f.text_field :prefectures, autofocus: true, autocomplete: "都道府県" %>
    </div>
    
    <div class="field">
      <%= f.label :"自己紹介" %>
      <%= f.text_field :introduction, autofocus: true, autocomplete: "自己紹介" %>
    </div>
    
    <div class="field">
      <%= f.label :"パスワード(6文字以上)" %>
      <% if @minimum_password_length %>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
    
    <div class="field">
      <%= f.label :"パスワード(確認用)" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
    
    <div class="actions">
      <%= f.submit "新規登録", class: "btn btn-primary" %>
    </div>
  <% end %>

  <h6>既に登録済みの方</h6>
  <p><%= link_to "こちら", new_customer_session_path %>からログインしてください。</p>
<div>
