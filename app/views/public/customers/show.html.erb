<div class = "container">
    <h1>会員照会</h1>
    <div class = "row">
        <div class = "col-md-6" >
            <h5>登録情報</h5>
        </div>
    </div>
    <table class="table table-bordered">
        <tbody>
            <tr class="customer-box">
                <td>会員</td>
                <td><%= @customer.id %></td>
            </tr>
            <tr>
                <td>名前</td>
                <td>
                    <%= @customer.nicname %>
                    <%= attachment_image_tag @customer, :image, size: '100x100', format: 'jpeg', class:"attachment image fallback" %>
                </td>
            </tr>
            
            <tr>
                <td>性別</td>
                <td><%= @customer.gender_i18n %></td>
            </tr>
            
            <tr>
                <td>都道府県</td>
                <td><%= @customer.prefectures %></td>
            </tr>
            
            <tr>
                <td>自己紹介</td>
                <td><%= @customer.introduction %></td>
            </tr>
        </tbody>
    </table>
    <% if current_customer.following?(@customer) %>
        <%= link_to 'chatを始める', chat_path(@customer.id)%>
    <% end %>
    
    <% if current_customer != @customer %>
        <% if current_customer.following?(@customer) %>
            <%= link_to 'フォロー外す', customer_relationship_path(@customer.id), method: :delete, class:"btn btn-sm btn-danger" %>
        <% else %>
            <%= link_to 'フォローする', customer_relationships_path(@customer.id), method: :POST, class:"btn btn-sm btn-primary" %>
        <% end %>
    <% end %>
 </div>
