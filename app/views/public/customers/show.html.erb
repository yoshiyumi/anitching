<div class = "container">
 <h1>マイページ</h1>
  <div class = "row">
      <div class = "col-md-6" >
        <h5>登録情報</h5>
      </div>

      
  </div>


    <table class="table table-hover table-inverse">
      <tbody>
        <tr class="customer-box">
           <td>会員</td>
           <td>
             <%= @customer.id %>
           </td>
        </tr>

        <tr>
           <td>名前</td>
           <td>
             <%= @customer.nicname %>
             <%= @customer.image %>
           </td>
        </tr>

       
        <tr>
           <td>性別</td>
           <td>
             <%= @customer.gender_i18n %>
           </td>
        </tr>

        <tr>
           <td>都道府県</td>
           <td>
             <%= @customer.prefectures %>
           </td>
        </tr>
        
        <tr>
           <td>自己紹介</td>
           <td>
             <%= @customer.introduction %>
           </td>
        </tr>

        
      </tbody>
    </table>

    <% if current_customer != @customer %>
    <%= link_to 'chatを始める', chat_path(@customer.id)%>
    <% end %>
 </div>
