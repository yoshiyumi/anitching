<% if !Favorite.where(customer_id: current_customer.id, work_id: work.id).present? %>
  <%= link_to work_favorites_path(work.id), method: :post, remote: true, class:"like-btn" do %>
    <i class="fas fa-star star-icon1"></i>
  <% end %>
  <span class="star-count1"><%= work.favorites.count %></span>
<% else %>
  <%= link_to work_favorite_path(work_id: work.id, id: work.favorites[0].id), method: :delete, remote: true, class:"like-btn" do %>
    <i class="fas fa-star star-icon2"></i>
  <% end %>
  <span class="star-count2"><%= work.favorites.count %></span>
<% end %>