<div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <table class="table table-bordered">
        <thead>
          <tr>
            <th>タグ</th>
          </tr>
         </thead>
         <tbody>
           <% @tags.each do |tag| %>
          <tr class="tag-box">
            <td><%= link_to tag.name, works_path(tag_id: tag.id) %></td>
          </tr>
          <% end %>
        </tbody>
        </table>
     </div>
     
     <div class="col-md-8 offset-md-1">
        <h1>作品一覧</h1>
         <div class = "col-md-6" >
              <td><%= link_to "＋", new_work_path, class:"btn btn-primary rounded-circle "%></td>
          </div>
           <div class = "row">
            <% @works.each do |work| %>
             <div class = "work col-md-3" >
                <%= link_to work_path(work.id) do%>
                <%= attachment_image_tag work, :image, :fill, 100, 100, format: 'jpeg', class:"attachment image fallback" %>
                <% end %><br>
                <%= link_to work.name, work_path(work.id)%><br>
                <%= work.release_date %>
             </div>
           <% end %>
           </div>

           <%= paginate @works, theme: 'twitter-bootstrap-4' %>
     </div>
    </div>
 </div>
