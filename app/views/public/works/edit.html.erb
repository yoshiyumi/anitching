<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>作品の編集</h1>
      <%= form_with model: @work,url: work_path(@work.id), local:true do |f| %>
        <table>
          <div class="form-group">
            <label for="image">作品画像</label>
            <%= f.attachment_field :image, placeholder: "画像", class:"form-control-file image" %>
          </div>
          
          <div class="form-group">
            <label for="name">作品名</label>
            <%= f.text_area :name, class:"form-control name" %>
          </div>
          
          <div class="form-group">
            <label for="release_date">公開日</label>
            <%= 
            f.text_field :release_date, class:"form-control release_date" %>
          </div>
          <div class="form-group">
            <label for="genre">ジャンル</label><br>
            <%= f.collection_select(:genre_id, @genres, :id, :name) %>
          </div>
          
          <div class="form-group">
            <label for="tag">タグ</label><br>
            <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |b| %>
              <%= b.label { b.check_box + b.text } %>
            <% end %>
          </div>
          
          <div class="form-group">
            <label for="synopsis">あらすじ</label>
            <%= f.text_field :synopsis, class:"form-control synopsis" %>
          </div>
          
          <div class="form-group">
             <%= f.submit "変更内容を保存", class:"btn btn-secondary" %>
          </div>
        </table>
      <% end %>
    </div>
  </div>
</div>