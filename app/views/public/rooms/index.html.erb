
 <div class="container">
    <div class="row" id = "room">
        <div class="col-sm-12 col-md-8 ">
          
            <h1>マッチング相手</h1>
            <div class = "row">
                <% @room_lists.each do |room_list| %>
                    <div class = "room col-md-3" >
                        <%= link_to customer_path(room_list.customer.id) do %>
                        <%= attachment_image_tag room_list.customer, :image, size: '150x150', format: 'jpeg', class:"attachment image fallback" %><br>
                        相手:<%= link_to room_list.customer.nicname, customer_path(room_list.customer.id) %>
                        <% end %><br>
                        <%= link_to "メッセージを送る", chat_path(room_list.customer_id) %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div> 
