<!DOCTYPE html>
<html>
  
  <head>
    <title>アニッチング</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <body>
    <header>
      <% if customer_signed_in? %>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
           <a class="navbar-brand" href="/"><span><%= link_to "アニッチング", root_path %></span></a>
           <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
             <span class="navbar-toggler-icon"></span>
           </button>
              <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav ml-auto">
                   <li><%= link_to "マイページ", customers_my_page_path, class:"fas fa-users nav-link text-white"%></li>
                   <li><%= link_to "作品一覧", works_path, class:"fas fa-link nav-link text-white"%></li>
                   <li><%= link_to "ルーム", rooms_path, class:"fas fa-link nav-link text-white"%></li>
                   <li><%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class:"fas fa-sign-out-alt nav-link text-white"%></li>
                </ul>
                <%= render 'searches/searches' %>
              </div>
       </div>
     </nav>
     <% elsif admin_signed_in? %>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
           <a class="navbar-brand" href="/"><span><%= link_to "アニッチング", admin_path %></span></a>
           <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
             <span class="navbar-toggler-icon"></span>
           </button>
              <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav ml-auto">
                   <li><%= link_to "作品一覧", admin_works_path, class:"fas fa-link nav-link text-white"%></li>
                   <li><%= link_to "会員一覧", admin_customers_path, class:"fas fa-users nav-link text-white"%></li>
                   <li><%= link_to "ジャンル", admin_genres_path, class:"fas fa-link nav-link text-white"%></li>
                   <li><%= link_to "タグ", admin_tags_path, class:"fas fa-link nav-link text-white"%></li>
                   <li><%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class:"fas fa-sign-out-alt nav-link text-white"%></li>
                </ul>
                <%= render 'searches/searches' %>
              </div>
       </div>
     </nav>
     <% else %>
     <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
           <a class="navbar-brand" href="/"><span><%= link_to "アニッチング", root_path %></span></a>
           <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
             <span class="navbar-toggler-icon"></span>
           </button>
              <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav ml-auto">
                   <li><%= link_to "About", about_path, class:"fas fa-link nav-link text-white"%></li>
                   <li><%= link_to "作品一覧", works_path, class:"fas fa-link nav-link text-white"%></li>
                   <li><%= link_to "新規登録", new_customer_registration_path, class:"fas fa-user-plus nav-link text-white"%></li>
                   <li><%= link_to "ログイン", new_customer_session_path, class:"fas fa-sign-in-alt nav-link text-white"%></li>
                </ul>
              </div>
       </div>
     </nav>
     <% end %>
   </header>

   <%= yield %>
  <footer>
    <div class="container mt-5">
      <div class="row">
        <div class="mx-auto">
          	<p></p>
      	</div>
      </div>
    </div>
  </footer>
</body>
</html>


